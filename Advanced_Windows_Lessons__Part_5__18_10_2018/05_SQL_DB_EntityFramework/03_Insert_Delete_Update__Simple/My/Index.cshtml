@model IEnumerable<MVC_SQL_DB.Models.Employee>

		<div>
		<h2>Employees</h2>
                    @* <a href="/My/InsertNew">Add New Employee</a> *@
            <input type="button" value="Add New Employee" onclick="myInsert()"  />
			<table border="1">
				<tr>
                    <th><p></p></th>
                    <th><p></p></th>
                    <th><p></p></th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Picture</th>
					</tr>
				@foreach (var m in Model)
				{
					<tr>
                        <td><input type="hidden" value="@m.id" /></td>
                        <td><input type="button" value="Delete" onClick="myDelete(@m.id)"></td>
                        <td><input type="button" value="Update" onClick="myUpdate(@m.id)"></td>
			            <td> @m.firstName</td>
			            <td> @m.lastName</td>
						<td><img src="@m.picture"/></td>
					</tr>
				}
			</table>
		</div>

<script type="text/javascript">
    function myInsert() {
        location.href = '@Url.Action("Insert","My")';
    }

    function myUpdate(ID) {
        location.href = '@Url.Action("Update","My")' +  "?ID=" + ID;
    }
    function myDelete(ID) {
        location.href = '@Url.Action("Delete","My")' +  "?ID=" + ID;   
    }
</script>
